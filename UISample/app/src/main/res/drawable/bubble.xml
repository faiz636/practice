<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0000" />=
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="168dp"
        android:right="-50dp"
        android:top="40dp">

        <shape android:shape="oval">

            <solid android:color="#ECB81D" />

            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="180dp"
        android:right="-50dp"
        android:top="0dp">

        <shape android:shape="oval">

            <solid android:color="#003157" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:right="10dp">

        <shape android:shape="rectangle">

            <solid android:color="#ECB81D" />

            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>